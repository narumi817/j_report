# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# artist List display
GET     /artists                       controllers.ArtistController.artistList()

# artist input form
GET     /artists/new                   controllers.ArtistController.artistNew()
POST    /artists                       controllers.ArtistController.artistAdd()

# update data
GET     /artists/edit/:artistId          controllers.ArtistController.artistEdit(artistId: Int)
POST    /artists/:artistId               controllers.ArtistController.artistUpdate(artistId: Int)

# delete data
POST    /artists/:artistId/delete        controllers.ArtistController.artistDelete(artistId: Int)
